<div class="page-header">
	<h1>Workshare File Weights App</h1>
</div>

<p>Please log in with your Workshare credentials</p>

<div class = "row">
	<div class ="col-md-4">
		<%= form_tag "/statistics/create" do %>
			<div class="form-group">
				<%= label_tag :email %><br />
				<%= text_field_tag :email %><br /><br />
				<%= label_tag :password %><br />
				<%= password_field_tag :password %><br /><br />
				<%= submit_tag "Sign in", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>

