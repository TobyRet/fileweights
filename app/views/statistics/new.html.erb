<h1>Workshare File Weights App</h1>

<h2>Please log in with your Workshare credentials</h2>

<%= form_tag "/statistics/create" do %>
	<p>
		<%= label_tag :email %><br />
		<%= text_field_tag :email %>
	</p>

	<p>
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</p>

	<%= submit_tag "Sign in" %>
<% end %>

